# Server Configuration
HOST=0.0.0.0
PORT=3000
RELOAD=false
LOG_LEVEL=info

# Cleanup Configuration
# Cleanup interval in seconds (default: 1 hour)
CLEANUP_INTERVAL=3600
# File retention time in hours (default: 24 hours)
FILE_RETENTION_HOURS=24
# Maximum number of files to keep
MAX_FILES=100

# Performance Optimization
# Maximum concurrent extraction jobs
MAX_CONCURRENT_JOBS=3
# Enable caching of downloaded audio files (true/false)
CACHE_ENABLED=true
# Cache retention time in hours
CACHE_RETENTION_HOURS=6
# FFmpeg thread count for processing
FFMPEG_THREADS=4
# yt-dlp concurrent fragment downloads
YTDL_CONCURRENT_FRAGMENTS=8

# Duration Limits (in seconds)
# Maximum video duration: 4 hours = 14400 seconds
MAX_VIDEO_DURATION=14400
# Maximum snippet duration: 4 hours = 14400 seconds
MAX_SNIPPET_DURATION=14400

# Paths
# Temporary directory for file processing (default: system temp)
# TEMP_DIR=/tmp/mediacut

# YouTube Configuration
# Optional proxy URL for YouTube requests
# YOUTUBE_PROXY_URL=http://user:pass@host:port

# Processing Configuration
# Default timeout for processing operations (in seconds)
PROCESSING_TIMEOUT=300
